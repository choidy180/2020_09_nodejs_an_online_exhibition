<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<style>
</style>
<div class="view_work_container">
    <div class="view_work_box">
        <div class="view_work_box_top">
                <% for (var i = 0; i < row[0].BOOTH_COUNT; i++){%>
                    <%if( (i+1) % 10 == 0){%>
                        <button style="margin-right: 0px;" onclick="location.href='/view_work/32=<%=i+1%>'" style="outline: none;"><%=i+1%></button>
                    <%} else {%>
                        <button  onclick="location.href='/view_work/<%=row2[0].EXHIBITION_NUMBER%>=<%=i+1%>'" style="outline: none;"><%=i+1%></button>
                    <%}%>
                <%}%>
        </div>
        <div class="view_work_content_box">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width: 100%;">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="d-block w-100" src="/public/images/work_imgs/<%=row7[0].FILE_NAME%>" alt="First slide" onclick="window.open(this.src)">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="/public/images/work_imgs/<%=row7[1].FILE_NAME%>" alt="Second slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="/public/images/work_imgs/<%=row7[2].FILE_NAME%>" alt="Third slide">
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="view_work_textbox">
                <div style="display: flex; width: 100%;">
                    <div style="font-weight: 700px; font-size: 32px; margin-top: 20px; width: 100%; color: white;"><%=row2[0].TITLE%></div>
                    <div style="font-weight: 700px; font-size: 32px; margin-top: 20px; width: 100%; display: flex; justify-content: flex-end; flex-direction: row; align-items: center;">
                        <% if (row[0].BOOTH_COUNT == row2[0].BOOTH_NUMBER) {%>
                            <% if (row8[0] == undefined) {%>
                                <button class="view_work_next_btn" style="outline: none;" onclick="location.href='/register_review/<%=row[0].NUMBER%>'">리뷰 작성</button>
                            <%} else {%>
                                <button class="view_work_next_btn" style="outline: none;" onclick="location.href='/main'">관람 종료</button>
                            <%}%>
                        <%} else {%>
                            <button class="view_work_next_btn" style="outline: none;" onclick="location.href='/view_work/<%=row2[0].EXHIBITION_NUMBER%>=<%=row2[0].BOOTH_NUMBER +1%>'">다음 작품으로 이동</button>
                        <%}%>
                    </div>
                </div>
                <div class="view_work_textbox_profile">
                    <div class="view_work_textbox_profile_imgbox" style="margin-right: 20px;">
                        <img src="/uploads/<%=row3[0].IMG%>" alt="">
                    </div>
                    <p style="font-size: 40px;"><%=row3[0].NAME%></p>
                    <% if (row6[0] == undefined){%>
                        <img class="exhibi_user_favorite_btn" src="/public/images/icon/star-8-xxl.png" alt="" onclick="location.href='/user_favorite_change/<%=row3[0].ID%>'">
                    <%} else {%>
                        <img class="exhibi_user_favorite_btn" src="/public/images/icon/star.png" alt="" onclick="location.href='/user_favorite_change/<%=row3[0].ID%>'">
                    <%}%>
                </div>
                <p style="margin-top: 20px;"><%=row2[0].EXPLANATION%></p>
            </div>
        </div>
    </div>
</div>

