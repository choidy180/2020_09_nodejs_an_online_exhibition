<div id="mypage_area">
    <div id="mypage_container" style="height: 100%; margin-top: 0px; flex-direction: row;">
        <div class="app_for_exhibition_container_left">
            <div class="app_for_exhibition_user_info">
                <div class="afe_user_info_imgbox">
                    <img class="afe_user_info_img" src="/uploads/<%=sess.user.IMG%>" alt="">
                </div>
                <p class="afe_user_info_name"><%= sess.user.NAME%></p>
                <p class="afe_user_info_name" style="font-weight: 500; letter-spacing: -0.5px;"><%= sess.user.EMAIL%></p>
            </div>
            <div class="app_for_exhibition_user_info_bottom">
                <p class="app_for_exhibition_user_info_bottom_text" onclick="location.href='/user_change_info_first'" style="color: #4B97FD; font-weight: 700;">회원정보 수정</p>
                <p class="app_for_exhibition_user_info_bottom_text" style="margin-bottom: 30px; margin-top: -10px;" onclick="location.href='/user_card'">결제카드 관리</p>
                <p class="app_for_exhibition_user_info_bottom_text" style="">전시회 등록</p>
                <p class="app_for_exhibition_user_info_bottom_text" style="margin-bottom: 30px; margin-top: -10px;">전시작품 등록</p>
            </div>
        </div>
        <div class="mypage_main_box_right" style="flex-direction: column ;justify-content: flex-start;">
            <div class="afe_right_headbox">
                회원정보 수정 [&nbsp;&nbsp;<%=sess.user.ID%>&nbsp;&nbsp;]
            </div>
            <form action="/users/user_info_change" method="POST">
            <div class="user_change_info_second_container">
                <div class="user_change_info_second_box">
                    <div style="font-size: 24px; font-weight: 700px; letter-spacing: -1.3px; width: 120px;">비밀번호</div>
                    <input type="text" name="pwd" class="input_user_info_change_pwd_1" style="width: 300px; margin-top: 5px; height: 35px; border: 2px solid #999;" value="<%=sess.user.PWD%>">
                </div>
                <div class="user_change_info_second_box">
                    <div style="font-size: 24px; font-weight: 700px; letter-spacing: -1.3px; width: 120px;">이메일</div>
                    <input type="text" name="email" class="input_user_info_change_pwd_1" style="width: 300px; margin-top: 5px; height: 35px; border: 2px solid #999;" value="<%=sess.user.EMAIL%>">
                </div>
                <div class="user_change_info_second_box">
                    <div style="font-size: 24px; font-weight: 700px; letter-spacing: -1.3px; width: 120px;">전화번호</div>
                    <input type="text" name="tel" class="input_user_info_change_pwd_1" style="width: 300px; margin-top: 5px; height: 35px; border: 2px solid #999;" value="<%=sess.user.TEL%>">
                </div>
                <button class="mypage_user_card_btn" style="margin-top: 30px; font-weight: 700;">정보수정</button>
            </div>
            </form>
        </div>
    </div>
</div>
