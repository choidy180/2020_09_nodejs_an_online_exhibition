<style>
    body{
        margin: 0;
    }
    .insert_input{
        width: 300px;
        height: 10px;
        outline: none;
        border: none;
        color: transparent;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/stylesheets/style.css">
    <title>카테고리 선택</title>
</head>
<body>
    <div class="cc_area">
        <div class="cc_box">
            <div class="cc_title_box">
                <input type="text" name="id" value="<%=id%>" readonly style="border: none; outline: none; width: 200px; height: 50px; text-align: right; font-size: 32px;"> 님 , 좋아하는 카테고리를 3개 선택하세요.
            </div>
            <script>
                setName = (event) => {
                    console.log(event.target.parentElement);
                    if (document.getElementById('ccc_box1') == null){
                        event.target.setAttribute( 'name', 'c1' )
                        event.target.parentElement.setAttribute( 'id', 'ccc_box1' )
                        document.getElementById('cate1').value = event.target.alt;
                        return;
                    } else {
                        if (document.getElementById('ccc_box2') == null){
                            event.target.setAttribute( 'name', 'c2' )
                            event.target.parentElement.setAttribute( 'id', 'ccc_box2' )
                            document.getElementById('cate2').value = event.target.alt;
                            return;
                        } else {
                            if (document.getElementById('ccc_box3') == null){
                                event.target.setAttribute( 'name', 'c3' )
                                event.target.parentElement.setAttribute( 'id', 'ccc_box3' )
                                document.getElementById('cate3').value = event.target.alt;
                                return;
                            } else {
                            }
                        }
                    }
                }
            </script>
            <form action="/board/category_register" method="POST">
                <%if(row.length > 3){%>
                    <div class="cc_content_box">
                        <% for (var i = 0; i < 3; i++){%>
                            <% if ((i+1) == 3){%>
                                <div class="cc_content_box2" value="<%=row[i].NAME%>">
                                    <img src="/category_img/<%=row[i].IMG%>" alt="<%=row[i].NAME%>" onclick="setName(event)">
                                    <p><%=row[i].NAME%></p>
                                </div>
                            <%} else {%>
                                <div class="cc_content_box1" value="<%=row[i].NAME%>">
                                    <img src="/category_img/<%=row[i].IMG%>" alt="<%=row[i].NAME%>" onclick="setName(event)">
                                    <p><%=row[i].NAME%></p>
                                </div>
                            <%}%>
                        <%}%>
                    </div>
                <%}%>
                <%if(row.length > 4){%>
                    <div class="cc_content_box" style="margin-top: 0px; display: flex;flex-direction: row; align-items: center;justify-content: center;">
                        <% for (var i = 3; i < 6; i++){%>
                            <% if ((i+1) == 6){%>
                                <div class="cc_content_box2" value="<%=row[i].NAME%>">
                                    <img src="/category_img/<%=row[i].IMG%>" alt="<%=row[i].NAME%>" onclick="setName(event)">
                                    <p><%=row[i].NAME%></p>
                                </div>
                            <%} else {%>
                                <div class="cc_content_box1" value="<%=row[i].NAME%>">
                                    <img src="/category_img/<%=row[i].IMG%>" alt="<%=row[i].NAME%>" onclick="setName(event)">
                                    <p><%=row[i].NAME%></p>
                                </div>
                            <%}%>
                        <%}%>
                    </div>
                <%}%>
                <div style="width: 100%; height: auto; display: flex; flex-direction: column;">
                    <input type="text" id="cate1" class="insert_input" name="category1" readonly>
                    <input type="text" id="cate2" class="insert_input" name="category1" readonly>
                    <input type="text" id="cate3" class="insert_input" name="category1" readonly>
                </div>
                <div class="cc_btn_box">
                    <button>카테고리 등록</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>